<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ForgotPasswordCheckEmailActivity">

    <!-- Ícone de sucesso -->
    <ImageView
        android:id="@+id/imgSuccessCheck"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/successicon"
        android:layout_marginBottom="16dp"
        android:contentDescription="Sucesso"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtSuccessTitle"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/txtSuccessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sucesso"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgSuccessCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtSuccessMessage" />

    <TextView
        android:id="@+id/txtSuccessMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Por favor, cheque seu email e registre uma nova senha"
        android:textSize="16sp"
        android:textColor="@color/textColorSecondary"
        android:textAlignment="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/txtSuccessTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutReenviar" />

    <LinearLayout
        android:id="@+id/layoutReenviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/txtSuccessMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAvancarCheckEmail">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não recebeu no email? "
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtReenviarEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reenviar"
            android:textColor="@color/colorPrimaryGreen"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAvancarCheckEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/colorPrimaryGreen"
        android:text="Avançar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
