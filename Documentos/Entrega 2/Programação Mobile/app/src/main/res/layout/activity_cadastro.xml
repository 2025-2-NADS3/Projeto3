<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">

    <!-- Imagem de Fundo -->
    <ImageView
        android:id="@+id/imgCadastroBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ordersuccess"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline_card_top_cadastro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Background Image for Cadastro" />

    <!-- Guideline para ajudar a posicionar o topo do card branco -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_card_top_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <!-- Card Branco com o formulário de Cadastro -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardCadastroContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_rounded_background"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_card_top_cadastro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/viewTopIndicator"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@color/dividerColor"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layoutTabsCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/viewTopIndicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Aba "Criar conta" - SELECIONADA -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/txtTabCreateAccountSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criar conta"
                    android:textColor="@color/colorPrimaryGreen"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"/>

                <View
                    android:id="@+id/viewCreateAccountTabUnderline"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorPrimaryGreen" />
            </LinearLayout>

            <!-- Aba "Login" - NÃO SELECIONADA -->
            <TextView
                android:id="@+id/txtTabLoginUnselected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/textColorSecondary"
                android:textSize="18sp"
                android:padding="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/lblNomeCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome completo"
            android:textColor="@color/textColorPrimary"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/layoutTabsCadastro"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edtNomeCompleto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_background"
            android:hint="Digite seu nome"
            android:inputType="textPersonName|textCapWords"
            android:padding="12dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/lblNomeCompleto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/lblEmailCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/textColorPrimary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/edtNomeCompleto"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edtEmailCadastro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_background"
            android:hint="Digite seu email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/lblEmailCadastro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/lblSenhaCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textColor="@color/textColorPrimary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/edtEmailCadastro"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edtSenhaCadastro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_background"
            android:hint="Digite uma senha"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/lblSenhaCadastro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/colorPrimaryGreen"
            android:text="Registrar-se"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/edtSenhaCadastro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/viewBottomIndicatorCadastro"
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:background="@color/dividerColorDark"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnRegistrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
