<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!-- Imagem de Fundo -->
    <ImageView
        android:id="@+id/imgLoginBackground"
        android:layout_width="252dp"
        android:layout_height="181dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ordersuccess"
        app:layout_constraintBottom_toTopOf="@+id/guideline_card_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Guideline para o topo do card branco -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_card_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <!-- Card Branco com formulário -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardLoginContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_rounded_background"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_card_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Linha cinza no topo -->
        <View
            android:id="@+id/viewTopIndicator"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Abas Criar conta / Login -->
        <LinearLayout
            android:id="@+id/layoutTabs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/viewTopIndicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtTabCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Criar conta"
                android:textColor="#757575"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTabLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Login"
                android:textColor="#4CAF50"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Sublinhado da aba Login -->
        <View
            android:id="@+id/viewLoginTabUnderline"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="#4CAF50"
            app:layout_constraintTop_toBottomOf="@id/layoutTabs"
            app:layout_constraintStart_toStartOf="@id/txtTabLogin"
            app:layout_constraintEnd_toEndOf="@id/txtTabLogin" />

        <!-- Label Email -->
        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Email"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/layoutTabs"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Campo Email -->
        <EditText
            android:id="@+id/edtEmailLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_background"
            android:hint="seuemail@exemplo.com"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/lblEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Label Senha -->
        <TextView
            android:id="@+id/lblPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Password"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/edtEmailLogin"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Campo Senha -->
        <EditText
            android:id="@+id/edtSenhaLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_background"
            android:hint="Sua senha"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/lblPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Esqueceu senha -->
        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Esqueceu a senha?"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/edtSenhaLogin"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão Login -->
        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#E8F5E9"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtForgotPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Linha cinza inferior -->
        <View
            android:id="@+id/viewBottomIndicator"
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_marginBottom="12dp"
            android:background="#BDBDBD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
